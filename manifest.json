{
    "manifest_version": "0.2",
    "name": "podcast-mcp",
    "display_name": "Podcast MCP",
    "icon": "logo.svg",
    "version": "0.1.0",
    "description": "Generate podcast dialogues with AI voices",
    "author": {
        "name": "Stefan Gasser"
    },
    "server": {
        "type": "python",
        "entry_point": "src/podcast_mcp/server.py",
        "mcp_config": {
            "command": "uv",
            "args": [
                "run",
                "--python", "3.12",
                "--with", "mcp>=1.0.0",
                "--with", "coqui-tts>=0.27.2",
                "--with", "pydub>=0.25.1",
                "--with", "python-dotenv>=1.0.0",
                "--with", "numpy<2.0.0",
                "--with", "toon-python>=0.1.0",
                "--directory", "${__dirname}",
                "--",
                "python",
                "-m", "src.podcast_mcp.server"
            ],
            "env": {
                "PYTHONPATH": "${__dirname}",
                "XTTS_DEVICE": "cpu"
            }
        }
    },
    "license": "MIT"
}